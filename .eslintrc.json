{
    "env": {
        "es6": true,
        "commonjs": true,
        "node": true
    },
    "extends": [
        "eslint:recommended",
    ],
    "installedESLint": true,
    "parser": "babel-eslint",
    "parserOptions": {
        "sourceType": "module"
    },
    "rules": {
        "indent": [2, 4, {"SwitchCase": 1}],
        "linebreak-style": [2, "unix"],
        "quotes": [2, "single"],
        "semi": [2, "always"],
        "yoda": 2,
        "curly": [2, "all"],
        "brace-style": [2, "1tbs", {"allowSingleLine": true}],
        "camelcase": 2,
        "eol-last": 2,
        "dot-location": [1, "property"],
        "dot-notation": 2,
        "eqeqeq": 2,
        "no-alert": 2,
        "no-else-return": 1,
        "no-empty": [2, { "allowEmptyCatch": true }],
        "no-eq-null": 2,
        "no-eval": 2,
        "no-extend-native": 2,
        "no-fallthrough": 2,
        "no-floating-decimal": 2,
        "no-implicit-coercion": [2, { "allow": ["!!"] } ],
        "no-implied-eval": 2,
        "no-invalid-this": 2,
        "no-lone-blocks": 2,
        "no-loop-func": 2,
        "no-multi-spaces": 2,
        "no-var": 2,
        "keyword-spacing": 2,
        "key-spacing": 2,
        "block-scoped-var": 2,
        "no-multi-str": 2,
        "no-native-reassign": 2,
        "no-redeclare": 2,
        "no-new": 2,
        "no-new-func": 2,
        "no-new-wrappers": 2,
        "no-octal": 2,
        "no-octal-escape": 2,
        "no-return-assign": 2,
        "no-script-url": 2,
        "no-self-assign": 2,
        "no-self-compare": 2,
        "no-sequences": 2,
        "no-throw-literal": 2,
        "no-unmodified-loop-condition": 2,
        "no-unused-expressions": [2, { "allowShortCircuit": true, "allowTernary": true }],
        "no-unused-vars": [2, {"argsIgnorePattern": "reject|err"}],
        "no-useless-call": 2,
        "no-useless-concat": 2,
        "no-useless-escape": 2,
        "no-void": 2,
        "one-var": [2, "never"],
        "prefer-const": 2,
        "prefer-arrow-callback": 2,
        "arrow-parens": [2, "always"],
        "space-in-parens": [2, "never"],
        "no-console": 1
    }
}
